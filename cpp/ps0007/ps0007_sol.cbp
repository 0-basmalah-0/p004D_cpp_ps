#include <iostream>
#include <cmath>

using namespace std;
double thearea(int shape, double dimensions[]) {
    switch (shape) {
        case 1:
            if (dimensions[0] <= 0 || dimensions[1] <= 0) {
                cout << "Error: Rectangle dimensions must be positive." << endl;
                return -1;
            }
            return dimensions[0] * dimensions[1];
        case 2:
            if (dimensions[0] <= 0) {
                cout << "Error: Square side must be positive." << endl;
                return -1;
            }
            return dimensions[0] * dimensions[0];
        case 3:
            if (dimensions[0] <= 0) {
                cout << "Error: Circle radius must be positive." << endl;
                return -1;
            }
            return M_PI * dimensions[0] * dimensions[0];
        default:
            cout << "Error: Invalid shape code." << endl;
            return -1;
    }
}

int main() {
    int shape;
    double dimensions[2];
    cout << "Enter shape code (1 - Rectangle, 2 - Square, 3 - Circle): ";
    cin >> shape;
    if (shape == 1) {
        cout << "Enter length and width of the rectangle: ";
        cin >> dimensions[0] >> dimensions[1];
    } else if (shape == 2) {
        cout << "Enter side length of the square: ";
        cin >> dimensions[0];
    } else if (shape == 3) {
        cout << "Enter radius of the circle: ";
        cin >> dimensions[0];
    } else
       cout << " Error" ;


    double area = thearea(shape, dimensions);

    if (area != -1) {
        cout << "The area of the shape is: " << area << endl;
    }

    return 0;
}
